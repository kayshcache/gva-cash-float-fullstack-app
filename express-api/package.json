{
  "name": "express-api",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "npm-run-all clean transpile",
    "start": "node ./dist-server/bin/www",
    "dev": "NODE_ENV=development npm-run-all build start",
    "prod": "NODE_ENV=production npm-run-all build start",
    "transpile": "babel ./src --out-dir dist-server",
    "clean": "rimraf dist-server",
    "logs": "gcloud app logs tail -s default",
    "deploy": "npm build && gcloud app deploy",
    "watch:dev": "nodemon",
    "test": "jest"
  },
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "bcrypt": "^4.0.1",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.18.2",
    "helmet": "^3.21.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.3",
    "morgan": "~1.9.1",
    "npm-run-all": "^4.1.5",
    "redis": "^3.0.2",
    "request": "^2.88.2",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "dotenv": "^8.2.0",
    "jest": "^26.2.7"
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
